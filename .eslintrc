{
	"extends": "ember",

	"parser": "babel-eslint",

	"ecmaFeatures": {
		modules: true,
		blockBindings: true,
		arrowFunctions: true,
		objectLiteralShorthandMethods: true,
		objectLiteralShorthandProperties: true,
		templateStrings: true
	},

	"rules": {
		"quote-props": [2, "consistent-as-needed"],
		"no-ternary": 0,
		"newline-per-chained-call": 0,
		"arrow-body-style": 0,
		"no-warning-comments": 0,
		"max-len": [1, 200],
		"camelcase": 0,
		"space-before-function-paren": [1, "never"],
		"one-var": [ 1, "never" ],
		"indent": ["error", "tab", {SwitchCase: 1}],
		"object-shorthand": [ 2, "always" ],
		"prefer-const": 0,
		"comma-dangle": 0,
		"spaced-comment": 1,
		"object-curly-spacing": 0,
		"arrow-spacing": [ 1, {
			before: true,
			after: true
		} ],
		"no-restricted-syntax": 0,

		"no-console": 0,
		"no-magic-numbers": 0,
		"valid-jsdoc": [2, {
			"requireReturn": false
		}]
	},

	"globals": {
		"$": true
	}
}
